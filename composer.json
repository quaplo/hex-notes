{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.15",
        "doctrine/doctrine-migrations-bundle": "^3.4.2",
        "doctrine/orm": "^3.5",
        "ramsey/uuid": ">=4.9",
        "symfony/console": "7.2.*",
        "symfony/dotenv": "7.2.*",
        "symfony/flex": "^2.8.1",
        "symfony/framework-bundle": "7.2.*",
        "symfony/http-foundation": "7.2.*",
        "symfony/http-kernel": "7.2.*",
        "symfony/messenger": "7.2.*",
        "symfony/property-access": "7.2.*",
        "symfony/property-info": "7.2.*",
        "symfony/runtime": "7.2.*",
        "symfony/serializer": "7.2.*",
        "symfony/uid": "7.2.*",
        "symfony/validator": "7.2.*",
        "symfony/var-dumper": "7.2.*",
        "symfony/yaml": "7.2.*"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true,
        "platform-check": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "test-watch": "vendor/bin/pest --watch",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "rector": "vendor/bin/rector",
        "rector:dry-run": "vendor/bin/rector --dry-run",
        "rector:check": "vendor/bin/rector --dry-run --no-diffs",
        "sf:cache-clear": "php bin/console cache:clear",
        "doctrine:diff": "php bin/console doctrine:migrations:diff",
        "doctrine:migrate": "php bin/console doctrine:migrations:migrate --no-interaction",
        "doctrine:migrate:test": "php bin/console doctrine:migrations:migrate --no-interaction --env=test",
        "doctrine:sync": [
            "@doctrine:diff",
            "@doctrine:migrate"
        ],
        "deptrac": "vendor/bin/deptrac analyse --config-file=deptrac.yaml",
        "deptrac:baseline": "vendor/bin/deptrac analyse --config-file=deptrac.yaml --generate-baseline",
        "deptrac:debug": "vendor/bin/deptrac debug:layer --config-file=deptrac.yaml"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.85",
        "pestphp/pest": "^3.8.2",
        "pestphp/pest-plugin": "^3.0",
        "phpstan/phpstan": "^2.1.17",
        "qossmic/deptrac": "^2.0",
        "rector/rector": "dev-main",
        "slevomat/coding-standard": "^8.19.1",
        "squizlabs/php_codesniffer": "^3.13.2",
        "symfony/browser-kit": "7.2.*",
        "symfony/maker-bundle": "^1.64"
    }
}
